{{>navbar}}
<script defer src="/static/scripts/updateProduct.js"></script>
<main>
  <a href="/">Atras</a>
    <section>
        {{#if product}}
        <h3>Editar producto</h3>
            <div class="product-card">
              <div class="image">
                <img src={{product.photo_url}} alt='foto de {{product.name}}'/>
              </div>
              <div class="card-details">
                <span class="code">#{{product.code}}</span>
                <h2 class="name">{{product.name}}</h2>
                <div class="stock-details">
                  <p class="price">${{product.price}}</p>
                </div>
              </div>
            </div>
        <form id="productUpdateForm">
            <label for="name">Titulo</label>
            <input type="text" name="name" placeholder="Nombre" value="{{product.name}}"/>
            <label for="description">Descripcion</label>
            <input type="text" name="description" placeholder="Descripcion" value="{{product.description}}"/>
            <label for="code">Codigo</label>
            <input type="text" name="code" placeholder="Codigo" value="{{product.code}}"/>
            <label for="photo_url">Foto</label>
            <input type="text" name="photo_url" placeholder="Foto" value="{{product.photo_url}}"/>
            <label for="price">Precio</label>
            <input type="number" name="price" min="1" placeholder="Precio" value="{{product.price}}"/>
            <label for="stock">Stock</label>
            <input type="number" name="stock" min="0" placeholder="Stock" value="{{product.stock}}"/>
            <button><span>Enviar</span></button>
        </form>
        <p id="errorMsg">Error</p>
        {{else}}
        <h3>No se encontro el producto</h3>
        <a href="/">Volver al inicio</a>
        {{/if}}
    </section>
</main>